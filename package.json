{
	"name": "@fm2/sdk",
	"version": "1.0.4",
	"description": "Filing-Manager 2 SDK to develop plugins.",
	"main": "bin/index.js",
	"bin": {
		"fm2sdk": "src/cli.ts"
	},
	"exports": {
		".": "./bin/index.js",
		"./types": "./types/index.ts"
	},
	"scripts": {
		"prepare": "npm run test:types && npm run build",
		"build": "tsc  --project . ",
		"build:types": "tsc types/index",
		"test:release:plugin.ts": "node bin/cli.js --target plugin --project ./test/plugin.ts --mode release",
		"test:release:plugin.tsx": "node bin/cli.js --target plugin --project ./test/plugin.tsx --mode release",
		"test:release:plugin.js": "node bin/cli.js --target plugin --project ./test/plugin.js --mode release",
		"test:release:plugin.jsx": "node bin/cli.js --target plugin --project ./test/plugin.jsx --mode release",
		"test:release:plugin.assets": "node bin/cli.js --target plugin --project ./test/plugin.assets --mode release",
		"test:watch:plugin": "node bin/cli.js --target plugin --project ./test/plugin.ts",
		"test:release:iconpack": "node bin/cli.js --target iconpack --project ./test/iconpack --mode release",
		"test:release:theme": "node bin/cli.js --target theme --project ./test/theme --mode release",
		"test:types": "tsc types/index.ts --outDir temp"
	},
	"author": "DanSketic <dansketic@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/DanSketic/fm-sdk",
	"bugs": "https://github.com/DanSketic/fm-sdk/issues",
	"dependencies": {
		"@babel/core": "^7.28.0",
		"@babel/plugin-transform-runtime": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@babel/preset-react": "^7.27.1",
		"babel-loader": "^10.0.0",
		"buffer": "^6.0.3",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"crypto-browserify": "^3.12.1",
		"elliptic": "^6.6.1",
		"file-loader": "^6.2.0",
		"fs-extra": "^11.3.0",
		"lodash": "^4.17.21",
		"ncp": "^2.0.0",
		"path-browserify": "^1.0.1",
		"shebang-loader": "0.0.1",
		"stream-browserify": "^3.0.0",
		"ts-loader": "^9.5.2",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"webpack": "^5.101.0",
		"zip-a-folder": "3.1.9"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/ncp": "^2.0.8",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.9",
		"react": "^19.1.1",
		"webpack-cli": "^6.0.1"
	}
}
